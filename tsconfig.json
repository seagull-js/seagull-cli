{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "include": [
      "src/**/*",
      "test/**/*"
  ],
  "lib": [ "es5", "es6", "es7", "dom", "dom.iterable", "esnext", "esnext.asynciterable" ],
  "types": ["node"]
}